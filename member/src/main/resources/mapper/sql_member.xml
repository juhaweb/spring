<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.sql_member">

	<!-- 멤버등록 -->
	<insert id="INSERT_MEMBER">
		INSERT INTO `MEMBER` SET 
		`uid`=#{uid}, 
		`name`=#{name},
		`hp`=#{hp},
		`pos`=#{pos},
		`dep`=#{dep},
		`rdate`=#{rdate};
	</insert>
	
	<!-- 멤버 리스트 출력시 -->
	<select id="SELECT_MEMBERS" resultType="kr.co.member.vo.MemberVO">
		SELECT * FROM `MEMBER`;
	</select>
	
	<!-- 멤버 수정시 멤버선택 -->
	<select id="SELECT_MEMBER" resultType="kr.co.member.vo.MemberVO">
		SELECT * FROM `MEMBER` WHERE `uid`=#{uid};
	</select>
	
	<!-- 멤버 수정시 재등록 -->
	<update id="UPDATE_MEMBER">
		UPDATE `MEMBER` SET 
			`name`=#{name},
		`hp`=#{hp},
		`pos`=#{pos},
		`dep`=#{dep} 
		WHERE `uid`=#{uid};
	</update>

	<!-- 멤버 삭제 -->
	<delete id="DELETE_MEMBER">
		DELETE FROM `MEMBER` WHERE `uid`=#{uid};
	</delete>
</mapper>